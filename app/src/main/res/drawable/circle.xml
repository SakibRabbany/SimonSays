<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <shape
            android:shape="oval">
            <gradient android:startColor="#FFD700"
                android:endColor="#FFD700"
                android:angle="270" />
            <stroke
                android:color="#000000"
                android:width="2dp"/>
            <size
                android:width="85dp"
                android:height="85dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
            <gradient android:startColor="#FFD700"
                android:endColor="#FFD700"
                android:angle="270" />
            <stroke
                android:color="#000000"
                android:width="2dp"/>
            <size
                android:width="85dp"
                android:height="85dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:state_selected="true" >
        <shape
            android:shape="oval">
            <gradient android:startColor="#FFD700"
                android:endColor="#FFD700"
                android:angle="270" />
            <stroke
                android:color="#000000"
                android:width="2dp"/>
            <size
                android:width="85dp"
                android:height="85dp"/>
        </shape>
    </item>
    <item android:state_pressed="false" android:state_selected="false" >
        <shape
            android:shape="oval">
            <gradient android:startColor="#0077a5"
                android:endColor="#0077a5"
                android:angle="270" />
            <stroke
                android:color="#000000"
                android:width="2dp"/>
            <size
                android:width="85dp"
                android:height="85dp"/>
        </shape>
    </item>

</selector>
